# define list of object fies
OBJS= uimain.o tokenizer.o history.o helper.o

# set compiler flags (debug and optimization)
CFLAGS=-g -O3

# first target is built by default
all: tokenizer

# include file dependencies
tokenizer.o: tokenizer.h
history.o: history.h
helper.o: helper.h history.h

# compilation instruction ($@ = target, $^ = prerequisites)
tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

# deletes files generated by compilation
clean:
	rm -f *.o tokenizer

# runs the program
run:tokenizer
	./tokenizer
